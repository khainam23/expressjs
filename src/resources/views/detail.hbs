<div class="container mt-4">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
      <li class="breadcrumb-item active" aria-current="page">Chi tiết khóa học</li>
    </ol>
  </nav>

  <!-- Course Detail -->
  <div class="row">
    <!-- Course Image -->
    <div class="col-lg-6 mb-4">
      <img src="{{course.image}}" class="img-fluid rounded shadow" alt="{{course.name}}" />
    </div>

    <!-- Course Information -->
    <div class="col-lg-6">
      <div class="course-info">
        <h1 class="display-5 fw-bold text-primary mb-3">{{course.name}}</h1>

        <!-- Course Description -->
        <div class="mb-4">
          <h3 class="h4 mb-3">Mô tả khóa học</h3>
          <p class="text-muted">{{course.description}}</p>
        </div>

        <!-- Action Buttons -->
        <div class="d-grid gap-2 d-md-flex">
          <button class="btn btn-primary btn-lg me-md-2" type="button">
            <i class="fas fa-shopping-cart me-2"></i>Đăng ký ngay
          </button>
          <button class="btn btn-outline-secondary btn-lg" type="button">
            <i class="fas fa-heart me-2"></i>Yêu thích
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="row mt-4 mb-5">
    <div class="col-12 text-center">
      <a href="/" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại trang chủ
      </a>
    </div>
  </div>
</div>