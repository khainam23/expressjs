<div class="container mt-3">
  <div class="row g-3">
    {{#each courses}}
      <div class="col-md-4">
        <div class="card h-100" data-id="{{this._id}}">
          <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="detail/{{this._id}}" class="btn btn-primary">Xem thêm</a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-12">
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-book-open fa-4x text-muted"></i>
          </div>
          <h3 class="text-muted">Chưa có khóa học nào</h3>
          <p class="text-muted">Hiện tại chưa có khóa học nào được đăng tải. Vui
            lòng quay lại sau!</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>